{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dist/**/*",
    "examples/**/*"
  ],
}